= form_for @item do |f|
  - if @item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@item.errors.count, "error")} prohibited this item from being saved:"
      %ul
        - @item.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :returned
    = f.check_box :returned
  .field
    = f.label :location
    = f.text_field :location
  .field
    = f.label :when
    = f.datetime_select :when
  .actions
    = f.submit 'Save'
